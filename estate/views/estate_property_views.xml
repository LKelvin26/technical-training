<odoo>
    <!-- Acción para abrir el formulario de crear una nueva reservación -->
    <record id="action_test_model_form" model="ir.actions.act_window">
        <field name="name">Crear Reservación</field>
        <field name="res_model">test.model</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>

    <!-- Vista de formulario para crear una reservación -->
    <record id="view_test_model_form" model="ir.ui.view">
        <field name="name">test.model.form</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <form string="Reservación de Hotel">
                <header>
                    <!-- Botón para confirmar la reserva -->
                    <button name="action_confirm_reservation" type="object" string="Confirmar Reservación" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="bedrooms"/>
                        <field name="date_reservation"/>
                        <field name="expected_price"/>
                        <field name="selling_price"/>
                        <field name="status" readonly="1"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menú para acceder a la creación de reservaciones -->
    <menuitem id="menu_test_model" name="Reservaciones"/>
    <menuitem id="menu_test_model_create" parent="menu_test_model" name="Nueva Reservación" action="action_test_model_form"/>
</odoo>
