<odoo>
    <!-- Vista de lista para estate.property -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="bedrooms"/>
                <field name="postcode"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario para estate.property -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="bedrooms"/>
                        </group>
                        <group>
                            <field name="postcode"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    

    <!-- AcciÃ³n para el modelo estate.property -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Real Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_estate_property_tree"/>
        <field name="views" eval="[(ref('view_estate_property_tree'), 'tree'), (ref('view_estate_property_form'), 'form')]"/>
    </record>
</odoo>