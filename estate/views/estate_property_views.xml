<odoo>
    <!-- Vista de búsqueda simplificada para estate.property -->
    <record id="view_estate_property_search_basic" model="ir.ui.view">
        <field name="name">estate.property.search.basic</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Properties">
                <field name="name"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="bedrooms"/>
                <field name="postcode"/>
            </search>
        </field>
    </record>

    <!-- Acción actualizada para el modelo estate.property -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Real Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="views" eval="[(ref('view_estate_property_tree'), 'tree'), (ref('view_estate_property_form'), 'form'), (ref('view_estate_property_search_basic'), 'search')]"/>
    </record>
</odoo>